<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertProductActivity">

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/edtInsertName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="EnterName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/edtType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Type"
        app:layout_constraintBottom_toTopOf="@+id/edtPrice"
        app:layout_constraintEnd_toEndOf="@+id/edtInsertName"
        app:layout_constraintStart_toStartOf="@+id/edtInsertName"
        app:layout_constraintTop_toBottomOf="@+id/edtInsertName" />

    <EditText
        android:id="@+id/edtPrice"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter Salary"
        app:layout_constraintBottom_toTopOf="@+id/btnInsertSave"
        app:layout_constraintEnd_toEndOf="@+id/edtType"
        app:layout_constraintStart_toStartOf="@+id/edtType"
        app:layout_constraintTop_toBottomOf="@+id/edtType" />

    <EditText
        android:id="@+id/edtImgURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"

        android:hint="Enter URL image"
        app:layout_constraintBottom_toTopOf="@+id/btnInsertSave"
        app:layout_constraintEnd_toEndOf="@+id/edtType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtType"
        app:layout_constraintTop_toBottomOf="@+id/edtType"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:id="@+id/btnInsertSave"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="116dp"
        android:text="Save data"
        app:layout_constraintEnd_toEndOf="@+id/edtPrice"
        app:layout_constraintStart_toStartOf="@+id/edtPrice"
        app:layout_constraintTop_toBottomOf="@+id/edtPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>